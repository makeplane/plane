  "dependencies": {
    "mobx": "catalog:",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@plane/eslint-config": "workspace:*",
    "@plane/typescript-config": "workspace:*",
    "@types/node": "^22.5.4",
    "typescript": "catalog:"
  }
