{
  "extends": "@plane/typescript-config/react-library.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM"],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/core/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/plane-editor/*": ["./src/ce/*"]
    }
  },
  "include": ["src/**/*", "index.d.ts"]
}
