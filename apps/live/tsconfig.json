{
  "extends": "@plane/typescript-config/base.json",
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "node16",
    "lib": ["ES2022"],
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/plane-live/*": ["./src/ce/*"]
    },
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceRoot": "/"
  },
  "include": ["src/**/*.ts", "tsup.config.ts"],
  "exclude": ["./dist", "./build", "./node_modules"]
}
