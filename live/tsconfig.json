{
  "extends": "@plane/typescript-config/base.json",
  "compilerOptions": {
    "module": "ES2015",
    "moduleResolution": "Bundler",
    "lib": [
      "ES2015"
    ],
    "target": "ES2015",
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/plane-live/*": ["./src/ee/*"]
    },
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceRoot": "/"
  },
  "include": [
    "src/**/*.ts",
    "tsup.config.ts"
  ],
  "exclude": [
    "./dist",
    "./build",
    "./node_modules"
  ]
}
